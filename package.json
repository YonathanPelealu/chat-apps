{
	"name": "chat",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc --project .",
		"dev-debug-local": "NODE_ENV=local nodemon server.ts --use_strict",
		"dev-debug": "NODE_ENV=development nodemon server.ts --use_strict",
		"dev-debug-staging": "NODE_ENV=staging nodemon server.ts --use_strict",
		"dev-debug-win": "SET NODE_ENV=development&& nodemon server.ts --use_strict",
		"dev-build-local": "npm run build&& SET NODE_ENV=development&& pm2 start ./build/server.js --name chat-server-dev-build",
		"dev-build": "npm run build && NODE_ENV=development pm2 start ./build/server.js --name chat-server-dev-build",
		"staging": "npm run build && NODE_ENV=staging pm2 start ./build/server.js --name chat-server-dev-staging",
		"prod": "npm run build && NODE_ENV=production pm2 start ./build/server.js --name chat-server-dev-production",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dayjs": "^1.10.7",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"multer": "^1.4.3",
		"pg": "^8.7.1",
		"pg-format": "^1.0.4",
		"socket.io": "^4.4.0",
		"uuid": "^8.3.2",
		"validator": "^13.7.0",
		"webp-converter": "^2.3.3"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/express": "^4.17.13",
		"@types/multer": "^1.4.7",
		"@types/node": "^16.11.7",
		"@types/pg": "^8.6.1",
		"@types/pg-format": "^1.0.2",
		"@types/validator": "^13.7.0",
		"axios": "^0.24.0",
		"nodemon": "^2.0.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2"
	}
}
